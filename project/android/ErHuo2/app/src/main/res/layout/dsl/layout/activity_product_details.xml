<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0">
    <LinearLayout
        android:id="@+id/details_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#f2f2f2">
        <ImageView
            android:id="@+id/details_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/details_seller_img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"
            app:civ_border_color="#C5C1C1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/zsl_user_img"/>
        <ImageView
            android:id="@+id/details_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:layout_marginLeft="280dp"/>
        <ImageView
            android:id="@+id/product_details_img"
            android:layout_width="1dp"
            android:layout_height="1dp"/>
    </LinearLayout>
        <View
            android:id="@+id/layer"
            android:layout_width="match_parent"
            android:background="#EEEEEE"
            android:layout_height="1dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginBottom="50dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/product_viewpager_box"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <com.youth.banner.Banner
                        android:id="@+id/product_details_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EEEEEE"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/smallerll_cricle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="￥"
                            android:textColor="@color/tomato"/>
                        <TextView
                            android:id="@+id/details_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textSize="30sp"
                            android:textColor="@color/tomato"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/details_describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="11111111111111111111111111111111111111111111111111111111111111111111111111111111111"
                        android:maxLines="3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EEEEEE"></View>
                <LinearLayout
                    android:id="@+id/product_details_goseller"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/smallerll_cricle">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/details_seller_img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#C5C1C1"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/zsl_user_img"/>
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/details_seller_name"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textSize="20sp"/>
                        <ImageView
                            android:id="@+id/details_seller_sex"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/man"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/details_img"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/in"
                        android:layout_marginLeft="70dp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EEEEEE"></View>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/smallerll_cricle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="10dp"
                            android:layout_height="23dp"
                            android:background="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="全部评论"
                            android:textSize="18sp"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/details_user_name"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#C5C1C1"
                        android:layout_marginLeft="10dp"/>
                        <EditText
                            android:layout_width="300dp"
                            android:layout_height="45dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评论"
                            android:background="@color/colorAccent"/>
                    </LinearLayout>
                    <ListView
                        android:layout_marginTop="10dp"
                        android:id="@+id/details_comment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/smallerll_cricle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">
                        <View
                            android:layout_width="10dp"
                            android:layout_height="23dp"
                            android:background="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="相似商品"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    <com.example.erhuo2.zsl.view.MyGridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="1dp"
                        android:verticalSpacing="1dp"
                        android:background="#f0f0f0"
                        android:numColumns="2">
                    </com.example.erhuo2.zsl.view.MyGridView>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#EEEEEE"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/details_want_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/want"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="想要"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/details_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏夹"/>
        </LinearLayout>
        <Button
            android:id="@+id/details_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊  一  聊"
            android:background="@color/colorAccent"
            android:layout_marginLeft="180dp"/>
    </LinearLayout>
</RelativeLayout>