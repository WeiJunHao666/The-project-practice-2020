<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dsl.services.CreateServiceActivity">

    <RelativeLayout
        android:id="@+id/create_service_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/create_service_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发帖子"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_service_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/create_service_imgs">

        <EditText
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="false"
            android:hint="将想买 or 想卖的东西分享给大家~"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/border_getimg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/create_service_rl">

        <ImageView
            android:id="@+id/create_service_getimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/getimg"/>


    </RelativeLayout>

    <GridLayout
        android:id="@+id/create_service_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="-4.5dp"
        android:paddingRight="-4.5dp"
        android:visibility="gone"
        android:numColumns="3"
        android:layout_below="@+id/create_service_native"/>


    <Button
        android:id="@+id/create_service_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_corner_button"/>

</RelativeLayout>