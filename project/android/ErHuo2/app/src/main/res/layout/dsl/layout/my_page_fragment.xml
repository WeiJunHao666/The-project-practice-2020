<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:clickable="false"

            android:enabled="false"
            android:id="@+id/my_page_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zsl_mypage_background">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_page_user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                app:civ_border_width="1dp"
                app:civ_border_color="#C5C1C1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/zsl_user_img"
                android:layout_marginTop="60dp"/>
            <LinearLayout
                android:id="@+id/my_page_usermessage"
                android:layout_toRightOf="@+id/my_page_user_img"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#ffffff"
                        android:textSize="30sp"/>
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:background="@drawable/zsl_mypage_btn">
                        <ImageView
                            android:id="@+id/my_page_usersex"
                            android:src="@drawable/man"
                            android:layout_width="18dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxEms="20"
                    android:textColor="#ffffff"
                    android:text="地址"/>
            </LinearLayout>
            <TextView
                android:id="@+id/my_page_introductory"
                android:layout_below="@id/my_page_usermessage"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="还没有个人简介欧！"
                android:textSize="20sp"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:maxEms="15"/>
            <Button
                android:id="@+id/my_page_edit"
                android:layout_toRightOf="@+id/my_page_introductory"
                android:layout_below="@id/my_page_usermessage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:text="编辑资料"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/zsl_mypage_btn"/>

            <RelativeLayout
                android:id="@+id/my_page_head"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="#00000000"
                >
                <ImageView
                    android:id="@+id/my_page_set"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/set"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/my_page_tab"
            android:layout_below="@+id/my_page_user"
            android:layout_width="match_parent"
            android:layout_marginTop="-10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ll_cricle">

        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/my_page_pager"
            android:layout_below="@+id/my_page_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </RelativeLayout>
</RelativeLayout>