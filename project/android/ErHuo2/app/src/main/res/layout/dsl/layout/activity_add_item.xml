<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dsl.additem.AddItemActivity">

    <RelativeLayout
        android:id="@+id/add_item_native"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/add_item_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发二手"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="发布"
            android:background="@drawable/rounded_corner_button"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_item_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/add_item_native">

        <EditText
            android:id="@+id/add_item_content"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="false"
            android:hint="品牌型号，新旧程度，入手渠道，转手原因…"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/border_getimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_item_rl">

        <GridView
            android:id="@+id/add_item_imgs"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>