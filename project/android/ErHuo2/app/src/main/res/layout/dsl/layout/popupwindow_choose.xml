<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格范围(元)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:id="@+id/two"
        android:layout_below="@id/one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:hint="输入最低价"
            android:textSize="15sp"
            android:background="@drawable/background_choose"/>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccent" />
        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:hint="输入最高价"
            android:textSize="15sp"
            android:background="@drawable/background_choose"/>
    </LinearLayout>
    <TextView
        android:id="@+id/three"
        android:layout_below="@id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快捷筛选"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:id="@+id/four"
        android:layout_below="@id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="25dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="全新"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="99新"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="其它"
            android:background="@drawable/background_choose"/>

    </LinearLayout>
    <TextView
        android:id="@+id/five"
        android:layout_below="@id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格筛选(元)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:id="@+id/six"
        android:layout_below="@id/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="25dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="0-450"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="450-900"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="900以上"
            android:background="@drawable/background_choose"/>

    </LinearLayout>
    <TextView
        android:id="@+id/seven"
        android:layout_below="@id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:id="@+id/eight"
        android:layout_below="@id/seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="25dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="一天内"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="7天内"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="30天内"
            android:background="@drawable/background_choose"/>

    </LinearLayout>
    <TextView
        android:id="@+id/nine"
        android:layout_below="@id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布者信用"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:id="@+id/ten"
        android:layout_below="@id/nine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="信用极好"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="信用优秀及以上"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="信用良好及以上"
            android:background="@drawable/background_choose"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eleven"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingRight="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="重置"
            android:layout_marginRight="30dp"
            android:background="@drawable/background_choose"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:text="完成"
            android:textColor="#ffffff"
            android:background="@drawable/background_choose_finish"/>

    </LinearLayout>
</RelativeLayout>